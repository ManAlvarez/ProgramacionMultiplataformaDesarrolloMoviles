<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminActivity">

    <TextView
        android:id="@+id/tv_nombre_apellidos_usuario_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_nombre_apellidos_usuario_admin"
        app:layout_constraintBottom_toTopOf="@+id/iv_usuario_admin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_usuario_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/iv_usuario_admin"
        app:layout_constraintBottom_toTopOf="@+id/btn_ver_pedidos_en_tramite_admin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_nombre_apellidos_usuario_admin"
        app:srcCompat="@drawable/ines" />

    <Button
        android:id="@+id/btn_ver_pedidos_en_tramite_admin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:onClick="verPedidosTramite"
        android:text="@string/btn_ver_pedidos_en_tramite_admin"
        app:layout_constraintBottom_toTopOf="@+id/btn_ver_pedidos_aceptados_admin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_usuario_admin"
        tools:text="@string/btn_ver_pedidos_en_tramite_admin" />

    <Button
        android:id="@+id/btn_ver_pedidos_aceptados_admin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:onClick="verPedidosAceptados"
        android:text="@string/btn_ver_pedidos_aceptados_admin"
        app:layout_constraintBottom_toTopOf="@+id/btn_ver_pedidos_rechazados_admin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_ver_pedidos_en_tramite_admin" />

    <Button
        android:id="@+id/btn_ver_pedidos_rechazados_admin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:onClick="verPedidosRechazados"
        android:text="@string/btn_ver_pedidos_rechazados_admin"
        app:layout_constraintBottom_toTopOf="@+id/btn_salir_admin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_ver_pedidos_aceptados_admin" />

    <Button
        android:id="@+id/btn_salir_admin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:onClick="salir"
        android:text="@string/btn_salir_admin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_ver_pedidos_rechazados_admin" />
</androidx.constraintlayout.widget.ConstraintLayout>